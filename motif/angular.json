{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "motif": {
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/scss"
              ]
            },
            "customWebpackConfig": {
              "path": "./custom.webpack.config.ts"
            },
            "indexTransform": "./index-html-transform.js",
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "preserveSymlinks": true,
            "assets": [
              "src/assets",
              "src/.htaccess",
              "src/favicon.ico",
              "src/silent-refresh.html",
              {
                "glob": "version.txt",
                "input": "src/generated",
                "output": "/"
              },
              {
                "glob": "oidc-client.min.js",
                "input": "node_modules/oidc-client/dist",
                "output": "/"
              },
              {
                "glob": "README.md",
                "input": ".",
                "output": "/"
              }
            ],
            "styles": [
              "src/scss/style.scss",
              "src/scss/app-loading.scss"
            ],
            "baseHref": "/",
            "allowedCommonJsDependencies": [
              "fin-hypergrid",
              "inject-stylesheet-template"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "6mb",
                  "maximumError": "7mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "10kb",
                  "maximumError": "10kb"
                }
              ],

              "customWebpackConfig": {
                "path": "./custom.webpack.config.ts"
              },
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                },
                {
                  "replace": "src/environments/environment-secrets.ts",
                  "with": "src/environments/environment-secrets.prod.ts"
                }
              ]
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": {
                "scripts": true,
                "styles": true,
                "vendor": true,
                "hidden": false
              },
              "namedChunks": true
            },
            "production-dev": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                },
                {
                  "replace": "src/environments/environment-secrets.ts",
                  "with": "src/environments/environment-secrets.prod.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "browserTarget": "motif:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "motif:build:production-dev"
            },
            "development": {
              "browserTarget": "motif:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "motif:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "styles": [
              "src/scss/style.scss",
              "src/scss/app-loading.scss"
            ],
            "assets": [
              "src/assets",
              "src/favicon.ico",
              "src/generated/version.txt"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        }
      }
    },
    "motif-e2e": {
      "root": "e2e",
      "sourceRoot": "",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "motif:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "motif",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "style": "scss",
      "changeDetection": "OnPush",
      "displayBlock": true,
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    },
    "@schematics/angular:service": {
      "skipTests": true
    }
  },
  "cli": {
    "analytics": "b4912cb0-3bfd-49bf-9403-f852fd45df9f"
  }
}
